<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Font awesome icons -->
    <script
      src="https://kit.fontawesome.com/530db67c75.js"
      crossorigin="anonymous"
    ></script>
    <!-- My Stylesheet -->
    <link rel="stylesheet" href="/css/styles.min.css" />

    <!-- My Script -->
    <script src="/js/bundle.js"></script>
    <!-- Bootstrap script -->
    <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"
    ></script>
    <title>The Movie Database</title>
  </head>
  <body>
    
<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-tmdbDarkBlue">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <img
          src="/assets/logo-dark.svg"
          alt="tmdb-logo"
          width="154"
          height="20"
        />
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <li class="nav-item">
              <a class="nav-link <%= activeLink == "/movies"? "active" : ""%>" aria-current="page" href="/">Home</a>
            </li>
            <a class="nav-link" aria-current="page" href="#">Movies</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="#">TV Shows</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="#">People</a>
          </li>
          <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link <%= activeLink == "/movies/favs/all"? "active" : ""%>" aria-current="page" href="/movies/favs/all">Favorites</a>
            </li>
          <% } %>
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/admin">Admin</a>
          </li>
        </ul>
        <% if (Object.keys(user).length) { %>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/logout">Log Out</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/user"><i class="fa-solid fa-user"></i></a>
            </li>
          </ul>
        <% } else {%>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link <%= activeLink == "/login"? "active" : ""%>" aria-current="page" href="/login">Log In</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= activeLink == "/signup"? "active" : ""%>" aria-current="page" href="/signup">Sign Up</a>
            </li>
          </ul>
        <% } %>
       
      </div>
    </div>
  </nav>
</header>

<%-body  %>

<footer class="bg-tmdbDarkBlue pt-5 pb-5 text-light">
    <div class="container-fluid">
      <div class="h-center">
        <div class="d-flex gap-5">
          <div class="vstack">
            <img src="/assets/logo-dark-big.svg" width="130" height="95" />
          </div>
          <div class="vstack">
            <h5>THE BASICS</h5>
            <ul class="footer-links">
              <li><a href="/">About TMDB</a></li>
              <li><a href="/">Contact Us</a></li>
              <li><a href="/">Support Forums</a></li>
              <li><a href="/">API</a></li>
              <li>
                <a href="/" target="_blank" rel="noopener">System Status</a>
              </li>
            </ul>
          </div>
          <div class="vstack">
            <h5>GET INVOLVED</h5>
            <ul class="footer-links">
              <li><a href="/"> Contribution Bible</a></li>
              <li><a href="/">Add New Movie</a></li>
              <li><a href="/">Add New TV Show</a></li>
            </ul>
          </div>
          <div class="vstack">
            <h5>COMMUNITY</h5>
            <ul class="footer-links">
              <li><a href="/">Guidlines</a></li>
              <li><a href="/">Discussions</a></li>
              <li><a href="/">Leaderboard</a></li>
              <li><a href="/">Twitter</a></li>
            </ul>
          </div>
          <div class="vstack">
            <h5>LEGAL</h5>
            <ul class="footer-links">
              <li><a href="/">Terms of Use</a></li>
              <li><a href="/">Privacy Policy</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <section class="flash-msgs">
    <% messages.forEach(msg => { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= msg %>
      <button
        type="button"
        class="btn-close"
      >
      </button>
    </div>
    <% }) %>

    <% errors.forEach(msg => { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= msg %>
        <button
          type="button"
          class="btn-close"
        >
        </button>
      </div>
      <% }) %>
  </section>

  </body>
  </html>
  