<section class="movie-details has-bg-img">
  <img
    class="bg-img"
    src="http://image.tmdb.org/t/p/w1920_and_h800_multi_faces/<%=movie.backdrop_path%>"
    alt=""
  />
  <div class="bg-overlay">
    <div class="container-fluid py-5">
      <div class="movie-content">
        <div class="movie-thumb">
          <%-include('components/list-card', {item : movie, hover: false,
          hideContent : true, isShow : false, isFavorite : movie.isFav}) %>
        </div>
        <div class="movie-text">
          <h1 class="movie-title text-wrap"><%= movie.original_title %></h1>
          <p class="fst-italic"><%= movie.tagline %></p>
          <h2 class="h5">Overview</h2>
          <p><%= movie.overview %></p>
        </div>
      </div>
    </div>
  </div>
</section>
