<section class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-4 d-flex justify-content-center">
      <a href="/form" class="btn btn-info rounded-pill m-auto">Add Record</a>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <table class="table table-striped table-dark table-bordered mt-3">
        <thead class="thead-dark">
          <tr>
            <th>Field 1</th>
            <th>Field 2</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody></tbody>
        <% forms.forEach(form => { %>
        <tr>
          <td><%= form.field1 %></td>
          <td><%= form.field2 %></td>
          <td>
            <a
              href="/form/delete/<%= form._id %>"
              class="btn btn-danger delete-recipie-btn"
              >Delete</a
            >
            <a
              href="/form/edit/<%= form._id %>"
              class="btn btn-success edit-recipie-btn"
              >Edit</a
            >
          </td>
        </tr>
        <% }) %>
      </table>
    </div>
  </div>
</section>
